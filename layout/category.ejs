<%- partial('_partial/tab.ejs') %>
<div class="category-contetn">
    <% if (is_category(page.category)) { %>
        <h2 class="current">- <%= page.category %> -</h2>
        <% page.posts.each(post => { %>
            <div class="post-item">
                <a class="title" href="<%- url_for(post.path) %> "><%- post.title %></a>
                <div class="info">
                    <span class="date"><%- date(post.date) %></span>
                    <%- partial('_partial/tip.ejs', {post: post, open_sticky: false}) %> 
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="cat-list">
            <% site.categories.forEach(cat => { %>
                <div class="cat-item">
                    <div class="cat-name">
                        <a href="<%- url_for(cat.path) %>" class="name-link"><%- cat.name %></a>
                        <span class="posts-count"><%- cat.posts.length %></span>
                    </div>
                    <div class="cat-posts">
                        <%
                            let postGroup = []
                            cat.posts.forEach(post => {
                                postGroup.push(post)
                            })
                            postGroup.sort((f, s) => {
                                const res = s.date.year() - f.date.year()
                                return res ? res : s.date.month() - f.date.month()
                            })
                        %>
                        <% postGroup.forEach((post, i) => { %>
                            <% if (i++ > 1) return false %>
                            <div class="post">
                                <%
                                    const reg = /^[\w\s\x21-\x2f\x3a-\x40\x5b-\x60\x7B-\x7F]+$/i
                                    let truncateLength = reg.test(post.title) ? 37 : 20
                                %>
                                <a href="<%- url_for(post.path) %>" class="post-title"><%- truncate(post.title, {length: truncateLength}) %></a>
                                <!-- <span class="post-date"><%= date(post.date) %></span> -->
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } %>
</div>