<%- partial('_partial/tab.ejs') %>
<div class="tag-contetn">
    <% if (is_tag(page.tag)) { %>
        <h2 class="current">- <%= page.tag %> -</h2>
        <% page.posts.each(post => { %>
            <div class="post-item">
                <a class="title" href="<%- url_for(post.path) %> "><%- post.title %></a>
                <div class="info">
                    <span class="date"><%- date(post.date) %></span>
                    <%- partial('_partial/tip.ejs', {post: post, open_sticky: false}) %>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="tagcloud">
            <%- tagcloud({
                min_font: 16,
                max_font: 16
            }) %>
        </div>
    <% } %>
</div>