.post-item
    overflow hidden
    box-sizing border-box
    width 100%
    padding 0 2rem 1.5rem
    border-radius $br-xl
    background $seccolor-80
    box-shadow $shadow-s
    margin-bottom 1rem
    transition all $td-slow ease-out
    &:hover
        transform translate(0, -4px)
        box-shadow $shadow-m
    &:hover .front-img
        box-shadow $shadow-m
    &:hover .tip-item
        box-shadow $shadow-s
    .front-img
        width (@max-width - 64)
        border-radius $br-l
        box-shadow $shadow-s
        margin-block-start 1.5rem
        transition all $td-slow ease-out
    .title
        display block
        font-size $fs-m
        font-weight bold
        margin-top 1.5rem
        margin-bottom .7rem
    .info
        display flex
        justify-content space-between
        align-items center
        font-size $fs-xs
        .date
            color $grey
        .tip
            display flex
            justify-content space-between
            align-items center
            .tip-item
                padding .25rem .4rem
                border-radius $br-s
                color $grey
                background $lightgrey
                margin-inline-end 1rem
                transition all $td-default ease-out
                user-select none
                &:last-child
                    margin-inline-end 0
                &:hover
                    transform translate(0, -4px)
    p
        line-height $lh-l
        margin-block-start 1.5rem
        margin-block-end 0
