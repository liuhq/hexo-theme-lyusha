.wrap
    .article
        box-sizing border-box
        max-width 900px
        padding 3.5rem 3rem 2rem
        @media (max-width: 800px)
            max-width 650px
            padding 3.5rem 2rem 2rem
        @media (max-width: 500px)
            max-width 370px
            padding 3.5rem 1.25rem .5rem
        border-radius 12px
        background $seccolor-80
        box-shadow $shadow-l
        margin auto
        position relative
        transition all $td-slow ease-out
        &:hover
            box-shadow $shadow-xl
        .back
            color $maincolor-80
            position absolute
            top .6rem
            left .7rem
            transition all $td-default ease-out
            &:hover
            &:active
                color $maincolor-120
        .article-title
            // font-size $fs-m
            // text-align center
            margin-block-start 0
            margin-block-end 0
        .article-info
            display flex
            justify-content space-between
            align-items center
            font-size $fs-xs
            color $grey
            margin 1.5rem 0 1.5rem
            .tip
                display flex
                justify-content start
                align-items center
                .tip-item
                    padding .25rem .4rem
                    border-radius $br-s
                    color $grey
                    background $lightgrey
                    margin-inline-end 1rem
                    transition all $td-default ease-out
                    user-select none
                    &:last-child
                        margin-inline-end 0
                    &:hover
                        transform translate(0, -4px)
        hr
            opacity .3
            margin-block-end 2.5rem

